	</definition>
	
	<!-- 오류페이지 -->
	<definition name="/error" extends="baseProperties" template="/jsp/error.jsp" />
	<definition name="/error/*" extends="baseProperties" template="/jsp/error/{1}.jsp" />
	<definition name="/index" extends="baseProperties" template="/index.jsp" />
	
	<!--  TEST를 위한 layout 설정 -->
	<definition name="/test/componentApiResult" template="/jsp/test/componentApiResult.jsp"></definition>

