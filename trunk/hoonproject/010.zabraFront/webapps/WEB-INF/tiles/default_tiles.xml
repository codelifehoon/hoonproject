<tiles-definitions>
	<definition name="baseProperties">
		<put-attribute name="title"		value="LITE OMP Page" />
		<put-attribute name="description" value="LITE OMP PAGE입니다" />
		<put-attribute name="keywords" value="LITE OMP Front"/>
	</definition>
	
	<definition name="default_layout" extends="baseProperties" template="/layouts/default/default_layout.jsp">
